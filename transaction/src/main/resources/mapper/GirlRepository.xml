<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="xyz.mydev.transaction.repository.GirlRepository">
    <select id="selectByIdInLockMode" resultType="xyz.mydev.transaction.domain.Girl">
        select *
        from girl
        where id = #{id} lock in share mode
    </select>
</mapper>