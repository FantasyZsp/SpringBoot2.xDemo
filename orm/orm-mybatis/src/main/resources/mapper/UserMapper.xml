<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="xyz.mydev.orm.mybatisplus.example.mapper.UserMapper">
  <select id="find" resultType="xyz.mydev.orm.mybatisplus.example.domain.User">
    select *
    from user
    where id = #{id}
      and name = #{name}
  </select>
</mapper>